# Vibe Kanban Docker Environment Configuration
# Copy this file to .env and configure as needed

# =============================================================================
# Development Configuration
# =============================================================================

# Frontend port (default: 3000)
FRONTEND_PORT=3000

# Backend port (default: 8080)
BACKEND_PORT=8080

# =============================================================================
# Production Configuration
# =============================================================================

# Application port for production (default: 3000)
PORT=3000

# PostHog Analytics (optional)
# Get your API key from https://posthog.com
POSTHOG_API_KEY=

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite database path (relative to container)
DATABASE_URL=sqlite:/app/dev_assets/db.sqlite

# =============================================================================
# Remote/Cloud Deployment Configuration (for crates/remote)
# =============================================================================

# PostgreSQL database URL
# SERVER_DATABASE_URL=postgres://user:password@host:5432/database

# OAuth Configuration
# GITHUB_OAUTH_CLIENT_ID=your_github_client_id
# GITHUB_OAUTH_CLIENT_SECRET=your_github_client_secret
# GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
# GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# JWT Secret for authentication
# VIBEKANBAN_REMOTE_JWT_SECRET=your_secret_key_here

# Email service (Loops)
# LOOPS_EMAIL_API_KEY=your_loops_api_key

# Public URLs
# SERVER_PUBLIC_BASE_URL=http://localhost:3000
# VITE_APP_BASE_URL=http://localhost:3000
# VITE_API_BASE_URL=http://localhost:3000

# =============================================================================
# Development Flags
# =============================================================================

# Disable automatic cleanup of orphaned git worktrees (useful for debugging)
DISABLE_WORKTREE_ORPHAN_CLEANUP=1

# Rust logging level (trace, debug, info, warn, error)
RUST_LOG=debug
